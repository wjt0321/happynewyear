# EditorConfig 配置文件
# 统一不同编辑器的代码格式

root = true

# 所有文件的通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript 文件
[*.{js,ts,vue}]
indent_size = 2
max_line_length = 100

# JSON 文件
[*.{json,jsonc}]
indent_size = 2

# SCSS/CSS 文件
[*.{scss,css}]
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# 配置文件
[*.{yml,yaml}]
indent_size = 2