# 后端服务环境变量示例文件
# 复制此文件为 .env 并填入真实值

# 服务器端口
PORT=3000

# 数据库路径
DB_PATH=./data/fortune.db

# 运行环境
NODE_ENV=development

# 微信小程序配置（需要填入真实值）
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# JWT密钥（请使用强密码）
JWT_SECRET=your_super_secret_jwt_key

# CORS配置
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,https://servicewechat.com